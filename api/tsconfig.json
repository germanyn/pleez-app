{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "./src",
    "sourceMap": true,
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "files": ["src/index.ts"],
  "include": [
    "../commons/**/*.ts",
    "src/**/*.ts"
  ]
}